<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linxj.urlrouter.MainActivity">


    <Button
        android:id="@+id/jump"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="跳转到第二个activity"
        android:onClick="jump"

        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:id="@+id/jumpParam"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="跳转到第二个activity,带参数"
        android:onClick="jumpParam"

        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/jump" />

</android.support.constraint.ConstraintLayout>
